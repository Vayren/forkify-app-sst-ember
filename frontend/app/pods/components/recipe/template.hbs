<div local-class="recipe" class="qa-recipe">
  <Recipe::Image @url={{@recipe.imageUrl}} @title={{@recipe.title}}/>
  <Recipe::Details
    @servings={{@recipe.servings}}
    @time={{@recipe.cookingTime}}
    @addToWishlist={{this.add}}
    @removeFromWishlist={{this.remove}}
    @isRecipeInWishlist={{this.isRecipeInWishlist}}
  />
  <Recipe::Ingredients @ingredients={{@recipe.ingredients}}/>
  <Recipe::Footer @author={{@recipe.publisher}} @url={{@recipe.sourceUrl}}/>
</div>