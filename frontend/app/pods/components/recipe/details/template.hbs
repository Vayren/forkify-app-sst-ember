<div local-class="container">
  <div local-class="info">
    <svg local-class="icon">
      <use href="/assets/images/icons.svg#icon-stopwatch"></use>
    </svg>
    <span local-class="info-data">{{@time}}</span>
    <span> minutes</span>
  </div>
  <div local-class="info">
    <svg local-class="icon">
      <use href="/assets/images/icons.svg#icon-man"></use>
    </svg>
    <span local-class="info-data">{{@servings}}</span>
    <span> servings</span>
  </div>
  <button local-class="like-button" type="button">
    <svg>
      <use href="/assets/images/icons.svg#icon-heart-outlined"></use>
    </svg>
  </button>
</div>